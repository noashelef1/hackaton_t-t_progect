def filters_filtering(missions_dict, users_filter_dict):
    missions_filtered_list = []

    for mission in missions_dict:
            details_num = 0
            for filter in users_filter_dict:
                if filter in mission.key():
                    details_num += 1
            if details_num == len(users_filter_dict):
                missions_filtered_list.append(mission)

    return missions_filtered_list

def filter_key_words(filter_word, missions_details_dict):
    missions_filtered_list = []
    for mission in missions_details_dict:
        if filter_word in missions_details_dict["description"]:
            missions_filtered_list.append(mission)
    
    return missions_filtered_list
